<div class="container m-6">
        <div class="columns">
            <div class="column">
                <h1 class="title">Servicio web</h1>
                <div class="card mt-6">
                    <div class="card-content">
                        <div class="content">
                            
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {{#each users}}
                                    <tr>
                                        <td>{{this.username}}</td>
                                        <td>{{this.email}}</td>
                                        <td><a href="/user-delete/{{this.id}}">Delete</a>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
